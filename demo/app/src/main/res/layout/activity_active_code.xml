<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_black"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" android:id="@+id/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_1A"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:orientation="horizontal"
        >

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/item_avatar"
            android:layout_width="63dp"
            android:layout_height="62dp"
            app:aiv_BoarderWidth="2dp"
            android:padding="2dp"
            app:aiv_BoarderColor="@color/title_color"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="0dp"
            app:aiv_ShowBoarder="true"
            app:aiv_TextSizeRatio="0.5"
            android:src="@drawable/network_load"
            />

            <TextView
                android:id="@+id/userNickTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fdsafsadfasdfasdfdsf"
                android:textColor="@color/title_color"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black_1A"
        android:layout_marginTop="1dp"
        android:padding="@dimen/_10"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="规则说明:"
        android:textColor="@color/title_color"
        android:textSize="12dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="兑换后,立即获取对应奖励!!!"
            android:textColor="#bfbfbf"
            android:textSize="11dp"
            android:paddingTop="@dimen/_5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/vCodeEdit"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40"
                android:hint="请输入验证码"
                android:textColor="#818181"
                android:textColorHint="#818181"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:layout_marginRight="@dimen/_10"
                android:paddingLeft="@dimen/_10"
                android:paddingRight="@dimen/_10"
                android:paddingTop="@dimen/_0dp"
                android:paddingBottom="@dimen/_0dp"
                android:background="@drawable/button_kongxin_9c_raduis_5"
                />

            <com.xcore.ext.ImageViewExt
                android:id="@+id/vCodeImage"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_40"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/network_load"
                android:scaleType="fitXY"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/activiTxt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40"
            android:hint="请输入激活码"
            android:textColor="@color/color_9c9c9c"
            android:textColorHint="@color/color_9c9c9c"
            android:textSize="12dp"
            android:textAlignment="textStart"
            android:paddingLeft="@dimen/_10"
            android:paddingRight="@dimen/_10"
            android:paddingTop="@dimen/_0dp"
            android:paddingBottom="@dimen/_0dp"
            android:layout_marginTop="@dimen/_20"
            android:background="@drawable/button_kongxin_9c_raduis_5"
            />


        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:background="@drawable/button_normal_grey_raduis_5"
            android:layout_marginTop="@dimen/_40"
            />

    </LinearLayout>

</LinearLayout>