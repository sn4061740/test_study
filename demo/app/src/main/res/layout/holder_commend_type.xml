<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--类型推荐-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black_1A"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="3dp"
                android:layout_height="@dimen/_20"
                android:background="@color/title_color"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="类型推荐"
                android:textColor="@color/title_color"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10"
                android:textSize="@dimen/_15"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_5"
            android:paddingTop="@dimen/_5"
            android:paddingRight="@dimen/_10"
            android:paddingLeft="@dimen/_10"
            android:orientation="horizontal"
            android:background="@color/black_1A"
            >
            <LinearLayout
                android:id="@+id/btn_0"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="@dimen/_15"
                android:paddingBottom="@dimen/_15"
                >
                <com.xcore.ext.ImageViewExt
                    android:id="@+id/image_0"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/black_1A"
                    android:src="@drawable/network_load"
                    />
                <TextView
                    android:id="@+id/txt_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/title_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="@dimen/_15"
                android:paddingBottom="@dimen/_15"
                >
                <com.xcore.ext.ImageViewExt
                    android:id="@+id/image_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/black_1A"
                    android:src="@drawable/network_load"
                    />
                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/title_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="@dimen/_15"
                android:paddingBottom="@dimen/_15"
                >
                <com.xcore.ext.ImageViewExt
                    android:id="@+id/image_2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/black_1A"
                    android:src="@drawable/network_load"
                    />
                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/title_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="@dimen/_15"
                android:paddingBottom="@dimen/_15"
                >
                <com.xcore.ext.ImageViewExt
                    android:id="@+id/image_3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/black_1A"
                    android:src="@drawable/network_load"
                    />
                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/title_color"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>