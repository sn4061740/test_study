<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/downLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/black_1A"
    android:padding="5dp"
    android:layout_marginBottom="@dimen/_0.5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/conver"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:maxWidth="120dp"
            android:src="@drawable/network_load"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="3dp"
                android:textSize="12dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_9c9c9c"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态:sdfsa"
                    android:textSize="11dp"
                    android:textColor="@color/color_9c9c9c"
                    />
                <TextView
                    android:id="@+id/txt_speed"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11dp"
                    android:gravity="center"
                    android:textColor="@color/color_9c9c9c"
                    />
                <TextView
                    android:id="@+id/txt_info"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fsaddfasdfsadfasdf"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:textColor="@color/color_9c9c9c"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:background="@color/item_txt_color"
                android:progressDrawable="@drawable/progress_bar_bg"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="删除"
        android:layout_marginLeft="@dimen/_5dp"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />
</LinearLayout>